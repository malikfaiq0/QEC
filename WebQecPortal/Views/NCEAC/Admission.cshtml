@model WebQecPortal.Models.Institution

@{
    ViewBag.Title = "Admission";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">

        <div class="container contact">
            <div class="row">
                <div class="col-md-12">
                    <div class="enter-class-header">
                        <h2 class="text-white text-center pt-3">Admission Form</h2>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">

                <div class="col-md-10">
                    <div class="contact-form">

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>INSTITUTION:</p>
                                <input type="text" value="@ViewBag.Institution" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>
                                    PROGRAM (S) TO BE
                                    EVALUATED
                                    :
                                </p>
                                <div class="form-check">
                                    <input type="text" value="@ViewBag.prog" class="form-control" id="fname" placeholder="" name="fname">

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>Frequency of admission per academic year. Give detail.</p>
                                <input type="text" value="@ViewBag.freq" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>When are new students admitted in the program?</p>
                                <input type="text" value="@ViewBag.studAdmit" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>What instruments (scores in Matriculation and FSc exams, admission test, interview, etc.) are used for admission into the program?</p>
                                <textarea name="name" value="@ViewBag.instrument" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>What is the minimum requirement for admission in your program?</p>
                                <input type="text" value="@ViewBag.req" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>Is admission open merit?</p>
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="radio" value="@ViewBag.isYesMerit"
                                           name="flexRadioDefault"
                                           id="flexRadioDefault1" />
                                    <label class="form-check-label" for="flexRadioDefault1"> Yes </label>
                                </div>

                                <!-- Default checked radio -->
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="radio" value="@ViewBag.isNoMerit"
                                           name="flexRadioDefault"
                                           id="flexRadioDefault2"
                                           checked />
                                    <label class="form-check-label" for="flexRadioDefault2"> No </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>How merit list is compiled?</p>
                                <input type="text"  value="@ViewBag.meritCompiled" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>How many students are inducted per admission?</p>
                                <p><b>BSCS:</b></p>
                                <input type="text" value="@ViewBag.spring19bscs" class="form-control" id="fname" placeholder="Spring 2019" name="fname" maxlength="6" size="6">
                                <input type="text"  value="@ViewBag.fall19bscs"class="form-control" id="fname" placeholder="Fall 2019" name="fname" maxlength="6" size="6">
                                <input type="text" value="@ViewBag.spring20bscs" class="form-control" id="fname" placeholder="Spring 2020" name="fname" maxlength="6" size="6">
                                <input type="text" value="@ViewBag.fall20bscs" class="form-control" id="fname" placeholder="Fall 2020" name="fname" maxlength="6" size="6">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p><b>BSSE:</b></p>
                                <input type="text" value="@ViewBag.spring19bsse" class="form-control" id="fname" placeholder="Spring 2019" name="fname" maxlength="6" size="6">
                                <input type="text" value="@ViewBag.fall19bsse" class="form-control" id="fname" placeholder="Fall 2019" name="fname" maxlength="6" size="6">
                                <input type="text" value="@ViewBag.spring20bsse" class="form-control" id="fname" placeholder="Spring 2020" name="fname" maxlength="6" size="6">
                                <input type="text" value="@ViewBag.fall20bsse"class="form-control" id="fname" placeholder="Fall 2020" name="fname" maxlength="6" size="6">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>How do you ensure that the admission policies and procedures are followed properly and that transparency is maintained in the admission process?</p>
                                <textarea name="name" class="form-control">@ViewBag.policy </textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary"><a href="@Url.Action("AlumniBSCS","NCEAC")" style="color:white;">Next</a></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    @Html.ActionLink("AdminStructure", "AdminStructure", "NCEAC")
                    <br />

                    @Html.ActionLink("Admission", "Admission", "NCEAC")
                    <br />
                    @Html.ActionLink("AlumniBSCS", "AlumniBSCS", "NCEAC")
                    <br />
                    @Html.ActionLink("AlumniBSSE", "AlumniBSSE", "NCEAC")
                    <br />

                    @Html.ActionLink("CourseDescription", "CourseDescription", "NCEAC")
                    <br />
                    @Html.ActionLink("CourseLog", "CourseLog", "NCEAC")
                    <br />

                    @Html.ActionLink("CPMF", "CPMF", "NCEAC")
                    <br />

                    @Html.ActionLink("FacultyWorkload", "FacultyWorkload", "NCEAC")
                    <br />
                    @Html.ActionLink("FIF", "FIF", "NCEAC")
                    <br />
                    @Html.ActionLink("FinancialBSCS", "FinancialBSCS", "NCEAC")
                    <br />
                    @Html.ActionLink("FinancialBSSE", "FinancialBSSE", "NCEAC")
                    <br />
                    @Html.ActionLink("HECadministration", "HECadministration", "NCEAC")
                    <br />
                    @Html.ActionLink("PMPF", "PMPF", "NCEAC")
                    <br />
                    @Html.ActionLink("CRI", "CRI", "NCEAC")
                    <br />
                </div>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

<!-- /.content-wrapper -->
