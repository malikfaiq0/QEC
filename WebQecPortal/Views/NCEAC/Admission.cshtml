                                    <input type="text" value="@ViewBag.spring19bsse" class="form-control" id="fname" placeholder="Spring 2019" name="fname" maxlength="6" size="6">
                                    <input type="text" value="@ViewBag.fall19bsse" class="form-control" id="fname" placeholder="Fall 2019" name="fname" maxlength="6" size="6">
                                    <input type="text" value="@ViewBag.spring20bsse" class="form-control" id="fname" placeholder="Spring 2020" name="fname" maxlength="6" size="6">
                                    <input type="text" value="@ViewBag.fall20bsse" class="form-control" id="fname" placeholder="Fall 2020" name="fname" maxlength="6" size="6">
                                </div>
                            </div>

                            <div class="form-group">
