@model WebQecPortal.Models.AvailableRoom
@{
    ViewBag.Title = "AdminStructure";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">

        <div class="container contact">
            <div class="row">
                <div class="col-md-12">
                    <div class="enter-class-header">
                        <h2 class="text-white text-center pt-3">Admin Structure Form</h2>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">

                <div class="col-md-10">
                    <div class="contact-form">


                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>Total Number of Dedicated lecturer rooms:</p>
                                <input type="text" value="@ViewBag.Dedicated" class="form-control" id="fname" placeholder="" name="fname">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>Total Number of shared lecture rooms</p>
                                <input type="text" value="@ViewBag.SharedRoom" class="form-control" id="lname" placeholder="" name="lname">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <p>Average size of each class</p>
                                <input type="text" value="@ViewBag.AverageRoomSize" class="form-control" id="lname" placeholder="" name="lname">
                            </div>
                        </div>
                        <p>Instructional facilities provided in lecturer rooms: </p>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <input type="checkbox" checked="@ViewBag.ismultimedia"  id="multimedia1" name="multimedia1" value="multi">
                                <label for="multimedia1">All classrooms has equipped with multimedia projectors</label><br>
                                <input type="checkbox" checked="@ViewBag.isair" id="air1" name="air1" value="air">
                                <label for="air1">
                                    All Classrooms are air-conditioned providing a relaxed
                                    favorable learning environment.
                                </label><br>
                                <input type="checkbox" checked="@ViewBag.iswifi"  id="wifi1" name="wifi1" value="wifi">
                                <label for="wifi1"> Wi-Fi facility is available around the clock on the campus</label><br>
                                <input type="checkbox" checked="@ViewBag.issound" id="sound1" name="sound1" value="sound">
                                <label for="sound1"> All classrooms has sound system.</label><br>
                                <input type="checkbox"  checked="@ViewBag.isadvanced" id="videos1" name="videos1" value="videos">
                                <label for="videos1">
                                    This advanced equipment permits faculty members to supplement
                                    their lectures with videos and audios, which engages students further.
                                </label><br>
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary"><a href="@Url.Action("HECadministration","NCEAC")" style="color:white;">Next</a></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <!-- Default unchecked -->
                    @Html.ActionLink("AdminStructure", "AdminStructure", "NCEAC")
                    <br />

                    @Html.ActionLink("Admission", "Admission", "NCEAC")
                    <br />
                    @Html.ActionLink("AlumniBSCS", "AlumniBSCS", "NCEAC")
                    <br />
                    @Html.ActionLink("AlumniBSSE", "AlumniBSSE", "NCEAC")
                    <br />

                    @Html.ActionLink("CourseDescription", "CourseDescription", "NCEAC")
                    <br />
                    @Html.ActionLink("CourseLog", "CourseLog", "NCEAC")
                    <br />

                    @Html.ActionLink("CPMF", "CPMF", "NCEAC")
                    <br />

                    @Html.ActionLink("FacultyWorkload", "FacultyWorkload", "NCEAC")
                    <br />
                    @Html.ActionLink("FIF", "FIF", "NCEAC")
                    <br />
                    @Html.ActionLink("FinancialBSCS", "FinancialBSCS", "NCEAC")
                    <br />
                    @Html.ActionLink("FinancialBSSE", "FinancialBSSE", "NCEAC")
                    <br />
                    @Html.ActionLink("HECadministration", "HECadministration", "NCEAC")
                    <br />
                    @Html.ActionLink("PMPF", "PMPF", "NCEAC")
                    <br />
                    @Html.ActionLink("CRI", "CRI", "NCEAC")
                    <br />


                </div>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
