@model WebQecPortal.Models.SAR

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_DashboardLayoutPage1.cshtml";

}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">


            <h2>Details</h2>
