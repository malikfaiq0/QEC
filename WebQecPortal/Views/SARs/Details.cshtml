                        <center>

                </div>
            </div>

            <div class="card bg-light text-white">
                <div class="card-body">

                    <div class="row">

                        <div class="col-md-3"></div>

                        <div class="col-md-4">
                            <dt>
                                @Html.DisplayNameFor(model => model.Course.CourseTitle)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Course.CourseTitle)
                            </dd>
                        </div>

                        <div class="col-md-4">
                            <dt>
