                        <div class="col-md-3"></div>

                        <div class="col-md-4">
                            <dt>
                                @Html.DisplayNameFor(model => model.Department.DepartmentName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Department.DepartmentName)
                            </dd>
                        </div>

                        <div class="col-md-4">
                            <dt>
                                @Html.DisplayNameFor(model => model.Program.Description)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Program.Description)
                            </dd>
                        </div>

                        <div class="col-md-3"></div>

                    </div>











                </div>
            </div>


            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.SARID }) |
