@model IEnumerable<WebQecPortal.Models.SAR>

@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">

            <div class="card bg-info text-white">
                <div class="card-body">

                    <center><h3>SAR Manager</h3></center>

                </div>
            </div>

            <p>

                <input type="button" class="btn btn-info" value="Create" onclick="location.href='@Url.Action("Create", "SARs")'" />
             

            </p>
            <div class="table100 ver1 m-b-110">
                <table data-vertable="ver1">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Course.CourseTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department.DepartmentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Program.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Term.Semester)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course.CourseTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Program.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Term.Semester)
                            </td>
                            <td>
                                <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit", "SARs", new { id = item.SARID})'" />|
                                <input type="button" class="btn btn-info" value="Detail" onclick="location.href='@Url.Action("Details", "SARs", new { id = item.SARID})'" />|
                                <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("Delete", "SARs", new { id = item.SARID})'" />
                               
                            </td>
                            <td>
                                <button type="submit" class="btn btn-info"><a href="@Url.Action("StudentEvaluation","SAR")" style="color:white;">Download SAR</a></button>

                            </td>
                        </tr>
                    }

                </table>
            </div>


        </div>
     </div>
</div>
